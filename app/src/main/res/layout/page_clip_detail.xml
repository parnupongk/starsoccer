<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical"
  android:gravity="center_horizontal"
  android:background="@drawable/bg">
  
  <RelativeLayout 
	        android:id="@+id/clip_detail_layout_menu"
	        android:layout_width="fill_parent"
   			android:layout_height="wrap_content" 
   			android:orientation="horizontal" >
   			
   			
			    <ImageView
		  		android:id="@+id/clip_detail_image_menu"
		  		android:layout_width="wrap_content"
		  		android:layout_height="wrap_content"
		  		android:background="@drawable/btn_menu"
		  		android:layout_alignParentLeft="true"
		  		android:layout_gravity="top"
		  		/>
			    
			    <ImageView
		  		android:id="@+id/clip_detail_image_page"
		  		android:layout_width="fill_parent"
		  		android:layout_height="wrap_content"
		  		android:background="@drawable/header_ballthai"
		  		android:layout_toRightOf="@+id/clip_detail_image_menu"
		  		android:layout_gravity="top"
		  		/>
			    
	</RelativeLayout>
  <LinearLayout
  	android:id="@+id/clip_detail_layout_header"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:gravity="center_vertical"
  >
	  <ImageView
	  	android:id="@+id/clip_detail_header_image"
	  	android:layout_width="wrap_content"
	  	android:layout_height="wrap_content"
	  />
	  
	  <TextView
	  	android:id="@+id/clip_detail_header_text"
	  	android:layout_width="fill_parent"
	  	android:layout_height="wrap_content"
	  	android:singleLine="true"
	  	android:layout_gravity="center_vertical"
	  	android:textColor="#FFFFFF"
	  />
	    
  </LinearLayout>

  <LinearLayout
  	android:id="@+id/clip_detail_layout_data"
  	android:layout_width="fill_parent"
  	android:layout_height="fill_parent"
  >
		  <LinearLayout
		  	android:layout_width="fill_parent"
		  	android:layout_height="fill_parent"
		  	android:orientation="vertical"
		  >
		  	
		  	<TextView
		  		android:id="@+id/clip_detail_data_topic"
		  		android:layout_width="fill_parent"
		  		android:layout_height="wrap_content"
		  		android:textColor="#FFFFFF"
		  	/>
		  	<VideoView android:id="@+id/clip_detail_videoview"
				        		android:layout_width="fill_parent"
	  							android:layout_height="fill_parent">
				        
			</VideoView>

		  </LinearLayout>
	</LinearLayout>
	
</LinearLayout>
