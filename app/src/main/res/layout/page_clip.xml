<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/bg">
  
  <RelativeLayout 
	        android:id="@+id/page_clip_layout_menu"
	        android:layout_width="fill_parent"
   			android:layout_height="wrap_content" 
   			android:orientation="horizontal" >
   			
   			
			    <ImageView
		  		android:id="@+id/page_clip_image_menu"
		  		android:layout_width="wrap_content"
		  		android:layout_height="wrap_content"
		  		android:background="@drawable/btn_menu"
		  		android:layout_alignParentLeft="true"
		  		android:layout_gravity="top"
		  		
		  		/>
			    
			    <ImageView
		  		android:id="@+id/page_clip_image_page"
		  		android:layout_width="fill_parent"
		  		android:layout_height="wrap_content"
		  		android:background="@drawable/header_ballthai"
		  		android:layout_toRightOf="@+id/page_clip_image_menu"
		  		android:layout_gravity="top"
		  		/>
			    
	</RelativeLayout>
	
  <RelativeLayout
  	android:id="@+id/page_clip_layout_header"
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  	android:layout_below="@+id/page_clip_layout_menu"
  >
  	<ImageView
  		android:id="@+id/page_clip_header_image"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:layout_alignParentLeft="true"
  		android:src="@drawable/hd_sub_ball"
  	/>
  	
  	<TextView
  		android:id="@+id/page_clip_header_text"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:layout_toRightOf="@+id/page_clip_header_image"
  		style="@style/TextBack"
  	/>
  	
  	<ImageView
  		android:id="@+id/page_clip_img_hot"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:layout_alignParentRight="true"
  		android:src="@drawable/btn_clip_hot"
  	/>
  </RelativeLayout>
  
  <ListView
  	android:id="@+id/page_clip_listview"
  	android:layout_width="fill_parent"
  	android:layout_height="fill_parent"
  	android:layout_below="@+id/page_clip_layout_header"
  	style="@style/dividedListStyle"
  />
  
</RelativeLayout>